html 
    head
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
        title= list.title
    body
        div.container
            h1= list.title
            p.lead Estas s√£o suas tarefas
            ul
                each task, index in list.tasks
                    li 
                    form(action="/lists/" + list.id + "/tasks/" + task.taskId, method="PUT")
                        label(for= task.taskId)
                            button.btn.btn-primary.btn-sm(type="submit")
                                | Salvar
                            input(type="checkbox", id="task" + index, checked=task.done)
                            label(for="task" + index) 
                                | #{task.description}
            form(action="/lists/" + list.id + "/tasks" , method="POST")
                .input-group
                    input.form-control(placeholder= "Digite sua tarefa", name="description", required= true)
                    button.btn.btn-primary.btn-sm(type="submit")
                        | Salvar
            form(action="/lists/home")
                button.btn.btn-primary.btn-sm(type="submit")
                    | Home      
          
